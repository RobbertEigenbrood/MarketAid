<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mark_background"
    android:gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:context="group6.kb_50.marketaid.BuyerProductActivity"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/backgroundshape"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ProductTitle"
            android:id="@+id/TitleProductText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:typeface="serif" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarBuyerProduct"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:indeterminate="false" />

        <com.parse.ParseImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/view"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ProductDescription"
            android:id="@+id/DescriptionProductText"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:typeface="serif"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:text="@string/ShowLocation"
                android:id="@+id/LocationProductButton"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:typeface="serif"
                android:layout_margin="5dp"
                android:onClick="onClickFindLocation" />

            <Button
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:typeface="serif"
                android:text="@string/commentButton"
                android:id="@+id/WriteCommentButton"
                android:layout_margin="5dp"
                android:onClick="onClickCommentButton"
                android:gravity="center"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_weight="0.5" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/commentframelayout"
            android:layout_weight="1"></FrameLayout>

    </LinearLayout>
</RelativeLayout>
