    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="group6.kb_50.marketaid.MainScreenActivity">

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/SellerButton"
            android:id="@+id/SellerButtonMainScreen"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_margin="20dp"
            android:onClick="ToSellerMain" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/BuyerButton"
            android:id="@+id/BuyerButtonMainScreen"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_margin="20dp"
            android:onClick="ToBuyerMain" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tijdelijk Test Scherm"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:onClick="ToMainActivity" />
    </LinearLayout>
