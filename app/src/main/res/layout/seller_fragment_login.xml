<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group6.kb_50.marketaid.Seller.SellerLoginFragment"
    android:gravity="center"
    android:background="@drawable/backgroundshape"
    android:padding="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextusername"
        android:inputType="textAutoComplete"
        android:hint="Enter username here"
        android:layout_alignLeft="@+id/editTextpassword"
        android:layout_alignStart="@+id/editTextpassword"
        android:textSize="20sp"
        android:layout_alignEnd="@id/editTextpassword"
        android:layout_alignRight="@+id/editTextpassword"
        android:typeface="serif"
        android:layout_below="@+id/LoginEnterText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextpassword"
        android:hint="Enter password here"
        android:layout_below="@+id/editTextusername"
        android:textSize="20sp"
        android:typeface="serif"
        android:inputType="textPassword" />

    <Button
        android:text="Login"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:typeface="serif"
        android:id="@+id/buttonLogin"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/textViewcreate"
        android:layout_marginRight="10dp"
        android:layout_alignStart="@id/editTextpassword"
        android:layout_alignLeft="@+id/editTextpassword"
        android:onClick="onClickLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createAccountText"
        android:id="@+id/textViewcreate"
        android:layout_below="@+id/editTextpassword"
        android:layout_alignRight="@+id/editTextpassword"
        android:layout_alignEnd="@+id/editTextpassword"
        android:layout_alignLeft="@+id/editTextpassword"
        android:layout_alignStart="@+id/editTextpassword"
        android:textSize="15sp"
        android:typeface="serif" />

    <Button
        android:text="Register"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:id="@+id/buttonRegister"
        android:layout_alignTop="@+id/buttonLogin"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/editTextpassword"
        android:layout_alignEnd="@id/editTextpassword"
        android:typeface="serif"
        android:onClick="ToRegisterOnClick" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarLogin"
        android:layout_alignTop="@+id/buttonLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/buttonLogin"
        android:layout_alignRight="@+id/buttonLogin"
        android:layout_alignEnd="@+id/buttonLogin"
        android:indeterminate="false"
        android:visibility="gone"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRegister"
        android:indeterminate="false"
        android:visibility="invisible"
        android:layout_alignTop="@+id/buttonRegister"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/EnterUserPass"
        android:id="@+id/LoginEnterText"
        android:textSize="20sp"
        android:gravity="left"
        android:typeface="serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignEnd="@id/editTextusername"
        android:layout_alignStart="@id/editTextusername"
        android:layout_alignLeft="@+id/editTextusername"
        android:layout_alignRight="@+id/editTextusername"
        android:layout_marginBottom="20dp" />
</RelativeLayout>