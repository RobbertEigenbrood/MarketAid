<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group6.kb_50.marketaid.Seller.SellerAddProductFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddProduct"
        android:id="@+id/AddProductText"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:id="@+id/TitleAddText"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_below="@+id/AddProductText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterProductTitleAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TitleAddText"
        android:gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textAutoComplete" />

    <com.parse.ParseImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SampleImageAddView"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/AddImageButton"
        android:layout_below="@+id/EnterProductTitleAdd"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddImage"
        android:id="@+id/AddImageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickAddImage"
        android:gravity="center"
        android:layout_above="@+id/CategoryAddText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Browse"
        android:id="@+id/BrowseAddButton"
        android:layout_alignTop="@+id/AddImageButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_above="@+id/CategoryAddText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Category"
        android:id="@+id/CategoryAddText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_above="@+id/EnterProductCategoryAdd" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterProductCategoryAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:layout_above="@+id/DescriptionAddText"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textAutoComplete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:id="@+id/DescriptionAddText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_above="@+id/AddProductDescriptionEdit" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddProductDescriptionEdit"
        android:layout_alignParentStart="true"
        android:gravity="bottom"
        android:lines="2"
        android:layout_above="@+id/AddButton"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_alignParentLeft="true"
        android:inputType="textAutoComplete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddProduct"
        android:id="@+id/AddButton"
        android:onClick="AddProduct"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />
    <!--       android:onClick="onClickAddProduct"-->

</RelativeLayout>