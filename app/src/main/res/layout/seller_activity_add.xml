<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group6.kb_50.marketaid.Seller.SellerAddProductFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterProductTitleAdd"
        android:gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textAutoComplete"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <com.parse.ParseImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/SampleImageAddView"
        android:src="@mipmap/faallogoo"
        android:layout_below="@+id/EnterProductTitleAdd"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/AddImage"
        android:id="@+id/AddImageButton"
        android:onClick="onClickAddImage"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:typeface="serif"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:layout_below="@+id/SampleImageAddView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Browse"
        android:id="@+id/BrowseAddButton"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:typeface="serif"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:layout_below="@+id/SampleImageAddView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Category"
        android:id="@+id/CategoryAddText"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_below="@+id/AddImageButton"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />
<!--
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterProductCategoryAdd"
        android:gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textAutoComplete"
        android:layout_below="@+id/CategoryAddText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true" />
        -->

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_spinner"
        android:layout_below="@+id/CategoryAddText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:id="@+id/DescriptionAddText"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_below="@+id/category_spinner"
        android:textColor="#000000"
        android:typeface="serif"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textStyle="bold" />

    <Button
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:typeface="serif"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:text="@string/AddProduct"
        android:id="@+id/AddButton"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:typeface="serif"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddProductDescriptionEdit"
        android:gravity="bottom"
        android:lines="2"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:inputType="textAutoComplete"
        android:layout_below="@+id/DescriptionAddText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>