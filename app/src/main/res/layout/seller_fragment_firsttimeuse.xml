<?xml version="1.0" encoding="utf-8"?>
<!-- Use CC for 80% transparency
    #ccff0500 orange or #ccff8c00 dark orange -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/firstTimeLayout"
    android:background="#ccff0500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/first_time"
        android:id="@+id/textViewFirstTime"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:focusable="false"
        android:gravity="left"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewFirstTime"
        android:src="@drawable/blue_arrow_md"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewFirstTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>