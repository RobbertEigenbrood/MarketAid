<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="group6.kb_50.marketaid.Seller.SellerAddProductFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddProduct"
        android:id="@+id/AddProductText"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EnterProductTitleAdd"
        android:gravity="bottom"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textAutoComplete"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/AddProductText"
        android:layout_toStartOf="@+id/AddProductText" />

    <com.parse.ParseImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SampleImageAddView"
        android:src="@mipmap/faallogoo"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/AddImageButton"
        android:layout_alignStart="@+id/AddImageButton"
        android:layout_alignRight="@+id/BrowseAddButton"
        android:layout_alignEnd="@+id/BrowseAddButton"
        android:layout_above="@+id/AddImageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddImage"
        android:id="@+id/AddImageButton"
        android:onClick="onClickAddImage"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BrowseAddButton"
        android:layout_toStartOf="@+id/BrowseAddButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Browse"
        android:id="@+id/BrowseAddButton"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Category"
        android:id="@+id/CategoryAddText"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_below="@+id/EnterProductTitleAdd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/EnterProductCategoryAdd"
           android:gravity="bottom"
           android:focusable="true"
           android:focusableInTouchMode="true"
           android:inputType="textAutoComplete"
           android:layout_below="@+id/CategoryAddText"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:editable="true" />
           -->

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_spinner"
        android:layout_below="@+id/CategoryAddText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/AddProductText"
        android:layout_toStartOf="@+id/AddProductText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Description"
        android:id="@+id/DescriptionAddText"
        android:gravity="bottom"
        android:textSize="20sp"
        android:layout_below="@+id/category_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddProduct"
        android:id="@+id/AddButton"
        android:onClick="onClick"
        android:layout_below="@+id/SampleImageAddView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Title"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:gravity="bottom"
        android:layout_below="@+id/AddProductText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AddProductDescriptionEdit"
        android:gravity="bottom"
        android:lines="2"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:inputType="textAutoComplete"
        android:layout_alignTop="@+id/AddButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/AddProductText"
        android:layout_toStartOf="@+id/AddProductText" />

</RelativeLayout>